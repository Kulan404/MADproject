<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    android:padding="10dp">

    <EditText
        android:id="@+id/upJobType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Job Type"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/upJobCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Company/Name" />

    <EditText
        android:id="@+id/upJobPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Job Position"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/upJobRequirements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Requirements"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/upJobSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Salary"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/upJobContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Contact/E-mail"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnUpdateData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:textColor="@color/button_text"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Update Data" />

</LinearLayout>